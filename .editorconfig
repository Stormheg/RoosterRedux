root = true

[*]
end_of_line = lf
insert_final_newline = true
remove_trailing_whitespace = true

[*.js]
charset = utf-8

[*.{js,scss,vue}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
